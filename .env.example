# SmartSurveillance Environment Configuration
# Copy this file to .env and update values

# Camera Settings
CAMERA_SOURCE=0
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=30

# Detection Settings
YOLO_MODEL=yolov8n.pt
CONFIDENCE_THRESHOLD=0.5
TARGET_CLASSES=person

# Alert Settings
ENABLE_EMAIL_ALERTS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password
RECIPIENT_EMAILS=recipient@example.com

# System Settings
ALERT_COOLDOWN_SECONDS=30
SAVE_ALERT_FRAMES=true
ALERT_FRAME_DIR=alerts
LOG_LEVEL=INFO

# Database Settings (optional, for future enhancement)
DB_TYPE=sqlite
DB_PATH=smartsurveillance.db

# API Settings (optional, for future REST API)
API_ENABLED=false
API_PORT=8000
API_HOST=0.0.0.0
